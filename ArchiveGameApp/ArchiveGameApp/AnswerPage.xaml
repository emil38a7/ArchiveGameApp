<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArchiveGameApp.AnswerPage">
    <ContentPage.Content>
        <Grid BackgroundColor="#EAE7DC">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <Button  Grid.Row="1" Clicked="AnswerButtonClicked" Text="King Christian I"
                    BackgroundColor="#bfb8ad" TextColor="#8A3033" x:Name="answer1Button" />
            <Button Grid.Row="2" Clicked="AnswerButtonClicked" Text="King Christian II"
                    BackgroundColor="#bfb8ad" TextColor="#8A3033" x:Name="answer2Button"/>
            <Button Grid.Row="3" Clicked="AnswerButtonClicked" Text="King Fredrick I"
                    BackgroundColor="#bfb8ad" TextColor="#8A3033" x:Name="answer3Button"/>
            <Button Grid.Row="4" Clicked="AnswerButtonClicked" Text="No Danish king was in prison in Sonderborg"
                    BackgroundColor="#bfb8ad" TextColor="#8A3033" x:Name="answer4Button"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>